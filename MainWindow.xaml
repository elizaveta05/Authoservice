<Window x:Class="Authoservice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authoservice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800" Background="White">

    <Border BorderThickness="5" BorderBrush="Aqua">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Background="Gray">
                <!-- Контент для первой строки -->
            </StackPanel>

            <Frame Grid.Row="1" x:Name="frame" Height="auto" Width="auto" LoadCompleted="frame_LoadCompleted">
                <!-- Контент для второго ряда, если необходимо -->
            </Frame>

            <StackPanel Grid.Row="2" Background="Gray">
                <!-- Контент для третьей строки -->
            </StackPanel>
        </Grid>
    </Border>
</Window>
